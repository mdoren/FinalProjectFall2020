<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitySSB3">

    <EditText
        android:id="@+id/idEditTextSSB3"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:autofillHints="@string/idHintSSB3"
        android:hint="@string/idHintSSB3"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </EditText>

    <TextView
        android:id="@+id/idScoreSSB3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/idScoreSSB3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idEditTextSSB3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idMetaKnight"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/idMetaKnight"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEditTextSSB3"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/idPit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idPit"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idMetaKnight"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/idZeroSuitSamus"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idZeroSuitSamus"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPit"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/idWario"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idWario"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idZeroSuitSamus"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/idSnake"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idSnake"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idWario"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/idIke"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idIke"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSnake"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/idPokémonTrainer"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idPokémonTrainer"
        android:textAlignment="center"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idIke"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/idDiddyKong"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idDiddyKong"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPokémonTrainer"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/idLucas"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idLucas"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idMetaKnight"
        app:layout_constraintTop_toBottomOf="@+id/idEditTextSSB3" />

    <TextView
        android:id="@+id/idSonic"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idSonic"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idPit"
        app:layout_constraintTop_toBottomOf="@+id/idLucas" />

    <TextView
        android:id="@+id/idKingDedede"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idKingDedede"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idZeroSuitSamus"
        app:layout_constraintTop_toBottomOf="@+id/idSonic" />

    <TextView
        android:id="@+id/idOlimar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idOlimar"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idWario"
        app:layout_constraintTop_toBottomOf="@+id/idKingDedede" />

    <TextView
        android:id="@+id/idLucario"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idLucario"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idSnake"
        app:layout_constraintTop_toBottomOf="@+id/idOlimar" />

    <TextView
        android:id="@+id/idROB"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idROB"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idIke"
        app:layout_constraintTop_toBottomOf="@+id/idLucario" />

    <TextView
        android:id="@+id/idToonLink"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idToonLink"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idPokémonTrainer"
        app:layout_constraintTop_toBottomOf="@+id/idROB" />

    <TextView
        android:id="@+id/idWolf"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idWolf"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idDiddyKong"
        app:layout_constraintTop_toBottomOf="@+id/idToonLink" />

    <Button
        android:id="@+id/idButtonCheckSSB3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="@string/idButtonCheckSSB3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idEditTextSSB3"
        app:layout_constraintTop_toBottomOf="@+id/idScoreSSB3" />
</androidx.constraintlayout.widget.ConstraintLayout>