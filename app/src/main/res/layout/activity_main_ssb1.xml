<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitySSB1">

    <EditText
        android:id="@+id/idEditTextSSB1"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:autofillHints="@string/idHintSSB1"
        android:hint="@string/idHintSSB1"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </EditText>

    <TextView
        android:id="@+id/idScoreSSB1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/idScoreSSB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idEditTextSSB1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idMario"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/idMario"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEditTextSSB1"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/idDonkeyKong"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idDonkeyKong"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idMario" />

    <TextView
        android:id="@+id/idLink"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idLink"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idDonkeyKong" />

    <TextView
        android:id="@+id/idSamus"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idSamus"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idLink" />

    <TextView
        android:id="@+id/idYoshi"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idYoshi"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSamus" />

    <TextView
        android:id="@+id/idKirby"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="@string/idKirby"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idYoshi" />

    <TextView
        android:id="@+id/idFox"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idFox"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idMario"
        app:layout_constraintTop_toBottomOf="@+id/idEditTextSSB1" />

    <TextView
        android:id="@+id/idPikachu"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idPikachu"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idDonkeyKong"
        app:layout_constraintTop_toBottomOf="@+id/idFox" />

    <TextView
        android:id="@+id/idLuigi"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idLuigi"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idLink"
        app:layout_constraintTop_toBottomOf="@+id/idPikachu" />

    <TextView
        android:id="@+id/idNess"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idNess"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idSamus"
        app:layout_constraintTop_toBottomOf="@+id/idLuigi" />

    <TextView
        android:id="@+id/idCaptainFalcon"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idCaptainFalcon"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idYoshi"
        app:layout_constraintTop_toBottomOf="@+id/idNess" />

    <TextView
        android:id="@+id/idJigglypuff"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="@string/idJigglypuff"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idKirby"
        app:layout_constraintTop_toBottomOf="@+id/idCaptainFalcon" />

    <Button
        android:id="@+id/idButtonCheckSSB1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="@string/idButtonCheckSSB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idEditTextSSB1"
        app:layout_constraintTop_toBottomOf="@+id/idScoreSSB1" />
</androidx.constraintlayout.widget.ConstraintLayout>
